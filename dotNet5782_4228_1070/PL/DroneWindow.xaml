<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="400" Closing="OnClosing1">
    <Grid Opacity="0.8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Label  x:Name="labelAddADrone" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Height="auto" Width="300"  FontStretch="Medium"  FontSize="40" FontWeight="SemiBold" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="57,20,0,0" Grid.ColumnSpan="5">
            <Label.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
            </Label.Background> Add a Drone</Label>
        <Button x:Name="CancelButton" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Height="30" Width="125"  Content="Cancel" HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickCancel" Margin="14,127,0,0" Grid.RowSpan="2" />
        <Button x:Name="AddlButton"  Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="4" Height="30" Width="125"  Content="Add"    HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickAdd" Margin="26,127,0,0" Grid.RowSpan="2"/>
        <!--<Button x:Name="GoBackButton" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Height="30" Width="125"  Content="" HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickGoBackButton"/>-->

        <Grid  x:Name ="AddDroneDisplay" Height="250" Grid.Column="1"  Grid.ColumnSpan="4" Grid.RowSpan="4" Grid.Row="1" Background="LightGray">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="117*"/>
                <ColumnDefinition Width="117*"/>
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>


            <Label x:Name="IdTextBoxLabel"        Grid.Column="1" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2" >Id...</Label>
            <TextBox x:Name="IdTextBox"           Grid.Column="2" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2" >id....</TextBox>
            <Label x:Name="ModelTextBoxLabel"     Grid.Column="1" Grid.Row="1" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2">MODEL</Label>
            <TextBox x:Name="ModelTextBox"        Grid.Column="2" Grid.Row="1" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2">Model....</TextBox>
            <Label x:Name="WeightSelectorLabel"   Grid.Column="1" Grid.Row="2" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2">weight</Label>
            <ComboBox x:Name="WeightSelector"     Grid.Column="2" Grid.Row="2" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" SelectionChanged="WeightSelector_SelectionChanged" Grid.ColumnSpan="2"/>
            <Label x:Name="StationIdTextBoxLabel" Grid.Column="1" Grid.Row="3" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2">Station id:</Label>
            <TextBox x:Name="StationIdTextBox"    Grid.Column="2" Grid.Row="3" Width="120" Height="35" HorizontalAlignment="Left" FontSize="20" VerticalAlignment="Center" TextChanged="StationIdTextBox_TextChanged" Grid.ColumnSpan="2" >Station id...</TextBox>
        </Grid>
        <Grid  x:Name ="UpdateDroneDisplay" Margin="0,124,0,93" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2">

        </Grid>

    </Grid>
</Window>
