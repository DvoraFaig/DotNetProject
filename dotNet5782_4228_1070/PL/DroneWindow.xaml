<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800" >
    <Grid Opacity="0.8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>

            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Label  x:Name="labelAddADrone" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Height="auto" Width="300"  FontStretch="Medium"  FontSize="40" FontWeight="SemiBold" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="57,20,0,0" Grid.ColumnSpan="5">
            <Label.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
            </Label.Background> Add a Drone
        </Label>
        <Button x:Name="ReturnToPageDroneListWindow" FontSize="10" FontWeight="DemiBold" Grid.Column="0" Grid.ColumnSpan="2" Height="20" Width="70"  Content="Return Back"    HorizontalAlignment="Left"  VerticalAlignment="Center"  Click="Button_ClickReturnToPageDroneListWindow" Margin="10,0,0,0"/>
        <Button x:Name="RestartButton" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Height="30" Width="125"  Content="Restart" HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickRestart" Margin="14,127,0,0" Grid.RowSpan="2" />
        <Button x:Name="AddlButton"  Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="4" Height="30" Width="125"  Content="Add"    HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickAdd" Margin="26,127,0,0" Grid.RowSpan="2"/>
        <Button x:Name="UpdateButton" Grid.Column="6" Grid.Row="2" Height="30" Width="125" Content="Update Details" Click="UpdateButton_Click"/>
        <!--<Button x:Name="GoBackButton" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Height="30" Width="125"  Content="" HorizontalAlignment="Left"  VerticalAlignment="Top"  Click="Button_ClickGoBackButton"/>-->
        <Grid  x:Name ="AddDroneDisplay"  Grid.ColumnSpan="6" Grid.RowSpan="4" Grid.Row="1" Background="LightGray" Margin="33,45,33,10">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="117*" />
                <ColumnDefinition Width="35*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
                <RowDefinition Height="54*"/>
            </Grid.RowDefinitions>
            <Label x:Name="IdTextBoxLabel"         Grid.Column="1" Grid.Row="0" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" >Drones' id:</Label>
            <TextBox x:Name="IdTextBox"            Grid.Column="2" Grid.Row="0" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2"  />
            <Label x:Name="ModelTextBoxLabel"      Grid.Column="1" Grid.Row="1" Width="173" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center">Drones' model:</Label>
            <TextBox x:Name="ModelTextBox"         Grid.Column="2" Grid.Row="1" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="20" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,18,0"/>
            <Label x:Name="DroneWeightSelectorLabel" Grid.Column="1" Grid.Row="2" Width="173" Height="35" HorizontalAlignment="Left"  FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center">Drones' weight:</Label>
            <ComboBox x:Name="DroneWeightSelector" Grid.Column="2" Grid.Row="2" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" SelectionChanged="WeightSelector_SelectionChanged" Grid.ColumnSpan="2" />
            <Label x:Name="StationIdTextBoxLabel"  Grid.Column="1" Grid.Row="3" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2">Station id:</Label>
            <TextBox x:Name="StationIdTextBox"     Grid.Column="2" Grid.Row="3" Width="120" Height="35" HorizontalAlignment="Left"   FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" />



            <Label x:Name="DroneWeightLabel" Grid.Column="1" Grid.Row="2" Width="173" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center">Drones' weight:</Label>
            <TextBox x:Name="DroneWeightUpdate"         Grid.Column="2" Grid.Row="2" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" IsReadOnly="True"/>
            <Label x:Name="BatteryTextBoxLabel"         Grid.Column="1" Grid.Row="3" Width="173" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" >Battery:</Label>
            <TextBox x:Name="BatteryTextBox"            Grid.Column="2" Grid.Row="3" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" IsReadOnly="True"  />
            <Label x:Name="StatusTextBoxLabel"          Grid.Column="1" Grid.Row="4" Width="173" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center">Status:</Label>
            <TextBox x:Name="StatusTextBox"             Grid.Column="2" Grid.Row="4" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" IsReadOnly="True"/>
            <Label x:Name="PositionDroneTLabel"         Grid.Column="1" Grid.Row="5" Width="173" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center"  Grid.ColumnSpan="2" >Postion:</Label>
            <TextBox x:Name="PositionDroneTextBox"      Grid.Column="2" Grid.Row="5" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center" Grid.ColumnSpan="2" IsReadOnly="True" />
            <Label x:Name="ParcelTextBoxLabel"          Grid.Column="1" Grid.Row="6" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center"   Grid.ColumnSpan="2" />
            <TextBox x:Name="ParcelIdIdTextBox"         Grid.Column="2" Grid.Row="6" Width="120" Height="35" HorizontalAlignment="Left" Padding="2" FontFamily="Tahoma" FontSize="18" VerticalAlignment="Center"  Grid.ColumnSpan="2" IsReadOnly="True" >Parcel....</TextBox>


        </Grid>


    </Grid>
</Window>
